generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Presentations {
  id                Int         @id @default(autoincrement())
  title             String      @unique
  start             DateTime
  end               DateTime
  room              String
  presenterFullName String
  presenterAvatar   String?
  Question          Questions[]

  @@unique([start, room])
  @@unique([end, room])
  @@index([start])
}

model Askers {
  id            String      @id @unique
  createdAt     DateTime    @default(now())
  blacklistedAt DateTime?
  Question      Questions[]

  @@index([blacklistedAt])
}

enum QuestionState {
  MARKED
  BLACKLISTED
}

model Questions {
  id Int @id @default(autoincrement())

  askerId String
  asker   Askers @relation(fields: [askerId], references: [id])

  presentationId Int
  presentation   Presentations @relation(fields: [presentationId], references: [id])

  content   String
  mark      QuestionState?
  createdAt DateTime       @default(now())

  @@unique([presentationId, content])
  @@index([presentationId, createdAt])
  @@index([presentationId, mark, createdAt])
}
